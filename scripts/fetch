#!/bin/bash
#
# This script is used to autogenerate a Python file containing
# base64-encoded PokÃ©mon sprites.
#
# Usage: ./fetch > file.py

sprite() {
  echo -n '    "'
  curl curl -s "https://www.serebii.net/pokearth/sprites/rb/$1.png" \
    | base64 -w 0
  echo '",'
}

export -f sprite

echo 'pokedex = ['
seq -f '%03.0f' 1 151 | xargs -I {} bash -c "sprite {}"
echo ']'
